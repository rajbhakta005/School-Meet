<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DigitalID"
    android:background="#fff"
    tools:showIn="@layout/activity_digital_id">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/errorColor"
        android:theme="@style/productfont"
        android:text="@string/pgp_digital_id"
        android:gravity="center_horizontal"
        android:id="@+id/search_digital_id_text"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/verified"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/search_digital_id_text"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card_view_activity"
        android:layout_below="@+id/search_digital_id_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/errorColor"
        app:cardCornerRadius="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Digital ID"
                android:textColor="#fff"
                android:theme="@style/productfont"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>



            <EditText
                android:id="@+id/search_membership_id_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Membership ID"
                android:textColorHint="#fff"
                android:backgroundTint="@color/errorColor"
                android:textColor="#fff"
                android:maxLength="8"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/search_digital_id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Search Digital ID"
                android:textAllCaps="false"
                android:padding="10dp"
                android:background="@drawable/roundbuttonwhite"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/search_data_details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_card_view_activity"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#fff"

        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/digital_member_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/errorColor"
                android:padding="5dp"
                android:contentDescription="Member Image"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="नाम: "
                android:theme="@style/productfont"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/digital_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/errorColor"
                android:theme="@style/productfont"
                android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="सदस्यता आईडी: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_membership_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="मोबाइल नंबर: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_mobile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="वार्ड: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_ward_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="सभा: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_assembly_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="व्यवसाय: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_occupation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="पता: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="शहर: "
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>


                <TextView
                    android:id="@+id/digital_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:theme="@style/productfont"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

        <Button

            android:id="@+id/another_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_data_details_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="gone"
            android:background="@drawable/roundedcorner"
            android:text="Search Another Digital ID"
            android:textColor="#fff"
            android:padding="10dp"
            android:theme="@style/productfont"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>