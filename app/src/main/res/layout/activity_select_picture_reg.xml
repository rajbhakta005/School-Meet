<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPictureReg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/click_picture_image_reg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cameracolor"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/click_picture_image"
            android:text="फोटो क्लिक करें"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:theme="@style/productfont"
            android:textSize="20sp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>