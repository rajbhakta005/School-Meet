<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PayMembershipFee"
    tools:showIn="@layout/activity_pay_membership_fee"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pay_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/alakhpay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/pay_membership_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/productfont"
            android:text="अलख सदस्यता शुल्क भुगतान"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/pay_logo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/pay_mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सदस्यता आईडी "
            android:theme="@style/productfont"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pay_membership_payment"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/pay_midTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:theme="@style/productfont"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pay_mid_text" />

        <TextView
            android:id="@+id/pay_mobile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="पंजीकृत मोबाइल नंबर"
            android:theme="@style/productfont"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pay_midTV"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/pay_mobileTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:theme="@style/productfont"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pay_mobile_text" />

        <TextView
            android:id="@+id/pay_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 100"
            android:textColor="#006400"
            android:theme="@style/productfont"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pay_mobileTV" />


        <Button
            android:id="@+id/pay_fee_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button"
            android:layout_below="@id/pay_amount_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:theme="@style/productfont"
            android:textSize="20sp"
            android:text="सदस्यता शुल्क का भुगतान करें"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>