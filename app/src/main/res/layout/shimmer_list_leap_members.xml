<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <View
        android:id="@+id/shimmer_list_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="#d3d3d3"/>

    <View
        android:id="@+id/shimmer_list_name"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="#d3d3d3"
        android:layout_toRightOf="@+id/shimmer_list_pic"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>


    <View
        android:id="@+id/shimmer_list_mobile"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:background="#d3d3d3"
        android:layout_toRightOf="@+id/shimmer_list_pic"
        android:layout_below="@+id/shimmer_list_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:id="@+id/shimmer_list_mid"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:background="#d3d3d3"
        android:layout_toRightOf="@+id/shimmer_list_pic"
        android:layout_below="@+id/shimmer_list_mobile"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>